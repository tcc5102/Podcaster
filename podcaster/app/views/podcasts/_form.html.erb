<%= form_for [ user, Podcast.new ], remote: true do |f| %>
  <div class='field add'>
    <%= f.label "Podcast" %>
    <%= f.text_field :title, class: 'field', placeholder: 'Add a new podcast.' %>
  </div>
  <div class='field rate'>
    <%= f.label "Link (1-5)" %>
    <%= f.text_field :link, class: 'field', placeholder: 'Link' %>
  </div>
  <div class="actions">
    <%= f.submit 'Save', class: 'btn btn-success' %>
  </div>
<% end %>
