<h1 align="center">Edit Podcast</h1>

<%= form_for [current_user, @podcast] do |f| %>
  <div class='field add'>
    <%= f.label :Add %>
    <%= f.text_field :title, class: 'field', placeholder: 'Add a new Podcast.' %></br>
  </div>
  <div class='field rate'>
    <%= f.label :link %>
    <%= f.text_field :link, class: 'field', placeholder: 'Link to it' %>
  </div>
  <div class="actions">
    <%= f.submit 'Save', class: 'btn btn-success' %>
  </div>
<% end %>
